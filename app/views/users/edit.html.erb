<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
        <%= form_with model: @user do |user| %>
      <div class="form_group">
        <label for="book_title">
          Name
        </label>
        <%= user.text_field :name,class:"form-control book_title" %>
      </div>
      <div class="form-group">
        <label for="user_image">
          Image
        </label><br>
        <%= user.file_field :profile_image,placeholder:"ファイルを選択",accept:"image/*" %>
      </div>
      <div class="form_group">
        <label for="book_opinion">
          Introduction
        </label>
        <%= user.text_area :introduction,class:"form-control book_body" %>
      </div> 
      <div class="form_group">
        <%= user.submit "Update User", class:"btn btn-secondary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>